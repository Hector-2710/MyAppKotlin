<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recetas Chilenas"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <!-- Botones de recetas -->
    <Button
        android:id="@+id/btn_recipe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receta 1" />

    <Button
        android:id="@+id/btn_recipe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receta 2"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_recipe3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receta 3"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_recipe4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receta 4"
        android:layout_marginTop="10dp"/>
</LinearLayout>
